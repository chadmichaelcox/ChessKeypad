@page "/"
@inject PhoneNumberGeneratorService Generator

<h3>Chess Piece Phone Number Generator</h3>
<p>This tool calculates valid 7-digit phone numbers on a keypad using chess piece moves.</p>

<button class="btn btn-primary" @onclick="Generate">Generate Counts</button>

@if (_results != null)
{
    <table class="table mt-3">
        <thead>
            <tr><th>Piece</th><th>Valid Phone Numbers</th></tr>
        </thead>
        <tbody>
            @foreach (var kvp in _results)
            {
                <tr>
                    <td>@kvp.Key</td>
                    <td>@kvp.Value</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Dictionary<string, int>? _results;

    private void Generate()
    {
        _results = Generator.GenerateAllValidCounts();
    }
}